.container
  .row
    .col-md-6
      %h1 Product List 

      %table.products
        %thead
          %tr
            %th Product name
        %tbody
          -products.each do |product|
            %tr
              %td
                %dl
                  %dt= product.name
                  - product.servings.each do |serving|
                    %dd.serving
                      %span= serving.name
                      %span= "| protein: #{serving.protein} g"
                      %span= " | fat: #{serving.fat} g"
                      %span= " | carb: #{serving.carb} g"
                      %span.options
                        = link_to 'Edit', edit_product_serving_path(product, serving)
                        = link_to 'Delete', product_serving_path(product, serving), method: :delete, data: { confirm: 'Are you sure you want delete it?'}

                  %dd= link_to 'new serving', new_product_serving_path(product)


    .col-md-6
      %h4 Do you want add some product?
      = link_to 'Add new product',  new_product_path, class: 'btn btn-primary'
